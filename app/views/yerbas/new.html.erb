<!-- main wrapper  -->
<div class="main-wrapper">
  <!-- pageheader  -->
  <div class="py-6 py-lg-8 ">
      <div class="container">
          <div class="row">
              <div class="offset-lg-1 col-lg-10 col-md-12 col-12 text-center">
                  <h1>Add a yerba</h1>
              </div>
          </div>
      </div>
  </div>
  <!-- Form  -->
  <%= simple_form_for @yerba, html: { class: "pb-lg-11 pb-7" } do |f| %>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-6">
          <!-- Basic Info -->
          <div class="row mb-6">
            <div class="col-12">
              <div class="mb-4 border-bottom pb-2">
                <h4 class="mb-0">Basic information</h4>
              </div>
            </div>
            <%= f.input :name, required: true, input_html: { class: "col-12 mb-3 form-control", placeholder: "Enter the yerba's name" } %>
            <%= f.input :brand, required: true, input_html: { class: "col-12 mb-3 form-control", placeholder: "Enter the brand" } %>
            <%= f.input :category, collection: ["Con palo", "Sin palo", "Organic"], input_html: { class: "col-12 mb-3 select2" } %>
            <%= f.input :country, collection: ["ðŸ‡¦ðŸ‡· Argentina", "ðŸ‡§ðŸ‡· Brazil", "ðŸ‡µðŸ‡¾ Paraguay", "ðŸ‡ºðŸ‡¾ Uruguay", "ðŸŒŽ Other"], input_html: { class: "col-12 mb-3 select2" } %>
          </div>
          <!-- Description -->
          <div class="row mb-6">
            <div class="col-lg-12">
                <div class="mb-4 border-bottom pb-2">
                  <h4 class="mb-0">Description</h4>
                </div>
            </div>
            <div class="col-lg-12 mb-6">
              <%= f.input :description, as: :text, input_html: { placeholder: "Enter the yerba's description", class: "form-control ql-container ql-snow", rows: "3" } %>
            </div>
          </div>
          <!-- Photo  -->
          <div class="row mb-6">
            <div class="col-lg-12">
                <div class="mb-4 border-bottom pb-2">
                    <h4 class="mb-0">Add Gallery Images </h4>
                </div>
            </div>
            <%= f.input :photo, as: :file, input_html: { class: "col-lg-12" } %>
          </div>
          <!-- submit button  -->
          <div class="row">
            <div class="col-lg-12">
              <%= f.submit "Submit", class: "btn btn-primary", data: {turbo: false} %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
