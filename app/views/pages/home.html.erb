                  <div class=" img-hover">
                    <a href="listing-category.html"><img src="<%= cl_image_path yerba.photo.key, height: 300, crop: :fill %>"  alt="<%= yerba.name %> picture"
                        class="img-fluid rounded mb-4"></a></div>
                  <h4 class="mb-0"> <a href="listing-category.html" class="text-dark"><%= yerba.name %></a></h4>
                  <p class="small"><%= yerba.brand %></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
