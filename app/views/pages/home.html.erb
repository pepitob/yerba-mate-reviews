<!-- main wrapper -->

<div class="d-flex flex-wrap w-100">
  <div class="flex-1" style="min-width: 0;">
    <!-- hero image -->
    <div class="w-100">
      <div class="position-relative d-flex pt-lg-6 flex-column min-vh-xl-100">
        <span class="position-absolute top-0 end-0 bottom-0 start-0" style=" background-size: cover;
  background-position: 50%; background-image: url(<%= asset_path 'banner5.webp' %>);">

        </span>
        <div class="position-relative d-flex flex-column justify-content-center pt-12 z-2">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <!-- content -->
                <div class="py-lg-20 py-6 py-md-14 position-relative">
                  <div class="text-center mb-10">
                    <h1 class="text-white display-3 fw-bold mb-1">Find the best yerba mate </h1>
                    <p class="lead text-white">Share reviews and discover new yerbas</p>
                  </div>
                  <!-- form -->
                  <div class="card border-0 p-3 search-form">
                    <div class="row">
                      <div class="col-sm-10 form-group border-start-md border-end-md">
                        <input type="text" class="form-control border-0" placeholder="Search a yerba or brand">
                      </div>
                      <div class="col-sm-2">
                        <div class="d-grid ">
                          <a href="#" class="btn btn-primary">Search</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- image gallery -->
    <div class="pb-lg-11 pb-7 ">
      <div class="container">
        <div class="row">
          <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <!-- section heading -->
            <div class="mb-5">
              <h2 class="mb-1">Discover our featured yerbas</h2>
              <p>Browse our unique yerbas specially selected for mate lovers</p>
            </div>
          </div>
        </div>
      </div>
      <!-- owl carousel -->
      <div class="container-fluid">
        <div class="theme-carousel p-3">
          <div class="owl-carousel owl-theme owl-location-listing">
            <!-- item -->
            <% Yerba.last(10).each do |yerba| %>
              <div class="item owl-item">
                <div class="mb-3">
                  <div class=" img-hover">
                    <a href="listing-category.html"><img src="<%= cl_image_path yerba.photo.key, height: 300, crop: :fill %>"  alt="<%= yerba.name %> picture"
                        class="img-fluid rounded mb-4"></a></div>
                  <h4 class="mb-0"> <a href="listing-category.html" class="text-dark"><%= yerba.name %></a></h4>
                  <p class="small"><%= yerba.brand %></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <!-- End of image gallery -->

  </div>
</div>
